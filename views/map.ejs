<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kizu Server Map</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }
        .map-container {
            width: 100%;
            height: 100vh;
            border: none;
        }
        #mapFrame {
            width: 100%;
            height: 100vh;
            border: none;
        }
    </style>
</head>
<body>
    <iframe 
        id="mapFrame"
        src="/map-proxy"
        class="map-container"
        allowfullscreen>
    </iframe>

    <script>
        const frame = document.getElementById('mapFrame');
        
        // Function to replace all absolute URLs with proxy URLs
        function replaceMapUrls(doc) {
            const baseUrl = 'http://play.kizuserver.xyz:25684';
            const elements = doc.getElementsByTagName('*');
            
            Array.from(elements).forEach(element => {
                // Handle src attributes
                if (element.src && element.src.includes(baseUrl)) {
                    element.src = element.src.replace(baseUrl, '/map-proxy');
                }
                
                // Handle href attributes
                if (element.href && element.href.includes(baseUrl)) {
                    element.href = element.href.replace(baseUrl, '/map-proxy');
                }
                
                // Handle background images in style attribute
                if (element.style && element.style.backgroundImage) {
                    if (element.style.backgroundImage.includes(baseUrl)) {
                        element.style.backgroundImage = element.style.backgroundImage.replace(baseUrl, '/map-proxy');
                    }
                }
            });

            // Handle inline styles
            const styleSheets = doc.getElementsByTagName('style');
            Array.from(styleSheets).forEach(style => {
                if (style.innerHTML.includes(baseUrl)) {
                    style.innerHTML = style.innerHTML.replace(new RegExp(baseUrl, 'g'), '/map-proxy');
                }
            });
        }

        frame.onload = function() {
            try {
                const frameDoc = frame.contentDocument || frame.contentWindow.document;
                replaceMapUrls(frameDoc);

                // Handle dynamic content changes
                const observer = new MutationObserver((mutations) => {
                    replaceMapUrls(frameDoc);
                });

                observer.observe(frameDoc.body, {
                    childList: true,
                    subtree: true
                });
            } catch (e) {
                console.error('Error updating iframe content:', e);
            }
        };
    </script>
</body>
</html> 